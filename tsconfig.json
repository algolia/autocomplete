{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNEXT"
  },
  "exclude": [
    ".storybook",
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/dist",
    "**/node_modules",
    "website",
    "stories",
    "examples"
  ]
}
